<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous">
    </script>

    <!-- Font Awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/js/all.min.js"></script>


    <!-- google font -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="views/assets/css/searchNoLogin.css">

    <!-- script scrollup -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="views/assets/js/searchPage.js"></script>

    <link rel="icon" href="views/assets/images/website.png" />
    <title>Search</title>
</head>

<body>

    <!-- Navbar -->
    <section class="navigasi">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="views/assets/images/logo.svg" alt="" width="140px">
                </a>
                <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar">
                    <ul class="navbar-nav ml-auto flex-nowrap">
                        <div class="search">
                            <form id="your_form" onclick="yourFunction()">
                                <input type="text" class="form-control" placeholder="Cari Jawaban dari Pertanyaanmu" name="title">
                                <button class="btn-search" type="submit"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                        <script>
                            function yourFunction() {
                                var action_src = "/search?" + document.getElementsByName("title")[
                                    0].value;
                                var your_form = document.getElementById('your_form');
                                your_form.action = action_src;
                            }
                        </script>
                        <!-- <li class="nav-item">
                          <a href="berlangganan.html" class="nav-link menu-item">Berlangganan</a>
                          </li> -->
                        <li class="nav-item">
                            <a href="login" class="nav-link menu-item">Masuk</a>
                        </li>
                        <li class="nav-item">
                            <a href="register">
                                <button class="btn btn-masuk" type="submit">Daftar</button>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <div id="contentUtama" style="background-color: #f2f2f2;">

        <div>
            <h5>Hasil pencarian untuk kata '<span id="keywoard"><%= title %></span>', sekitar <span id="count"><%= totalpertanyaan.count %> </span> hasil</h5>
            <!-- <h6>Sekitar <span id="count"> </span> hasil</h6> -->
        </div>

        <!-- search -->
        <div class="container" style="margin-top: 30px; padding: 0px;">
            <div class="row">

                <!-- Result #1-->
                <div class="col-8" id="searchResult">
                    <% for(var i=0; i<questions.length; i++) {%>
                        <div class="isi-beranda" style="background-color: #ffff; border-radius: 20px;">
                            <div class="row">
                                <!-- Foto Profil Isi -->
                                <div class="col-lg-1">
                                    <img class="img-beranda" src="views/assets/images/user.jpg" alt="" />
                                </div>
                                <div class="col-lg-10">
                                    <!-- Setting -->
                                    <!-- <a class="setting" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="views/assets/images/options.svg" class="img-setting" style="width:24px; height: 24px;">
                                </a>
                                <div class="dropdown-menu" id="menu-setting">
                                    <a class="dropdown-setting" href="#popup2"> <i class="far fa-share-square" ></i> Bagikan</a>
                                    <a class="dropdown-setting" href="#"><i class="far fa-save"></i> Simpan</a>
                                    <a class="dropdown-setting" href="#"><i class="far fa-bell"></i> Beritahu Perubahan</a>
                                    <a class="dropdown-setting" href="#"><i class="far fa-frown"></i> Tidak tertarik</a>
                                    <a class="dropdown-setting" href="#"><i class="far fa-flag"></i> Laporkan</a>
                                </div> -->
                                    <!-- Keterangan Profile -->
                                    <div class=profile-bar>
                                        <div class="profile-nama">
                                            <%= questions[i].User.username %>
                                        </div>
                                        <span class="profile-jenis">Pertanyaan</span>
                                        <div class="profile-jurusan">
                                            <%= questions[i].User.bio %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Vote -->
                            <div class="row">
                                <div class="col-lg-1">
                                    <div class="vote">
                                        <div class="like">
                                            <img src="views/assets/images/arrow-up.png" style="width: 28px; height: 28px;">
                                        </div>
                                        <div class="count-vote">
                                            0
                                        </div>
                                        <div class="dislike">
                                            <img src="views/assets/images/arrow-down.png" style="width: 28px; height: 28px;">
                                        </div>
                                    </div>
                                </div>
                                <!-- isi pertanyaan/Forum -->
                                <div class="col-sm-8 col-lg-10">
                                    <div class="konten">
                                        <a href="/questions/<%= questions[i].id %> ">
                                            <%= questions[i].title %>
                                        </a>
                                    </div>
                                    <!-- Preview Isi max 3 kalimat -->
                                    <div class="preview-isi">
                                        <%- questions[i].question %>
                                    </div>
                                    <!-- Kategori Pertanyaan/forum -->
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-10" style="margin-top: 10px;">
                                                <span id="kategoribaru">
                                                <%= categories[i].category %>
                                            </span>
                                                <span id="kategoribaru">
                                                <%= departements[i].departement %>
                                            </span>
                                                <span id="kategoribaru">
                                                <%= courses[i].course %>
                                            </span>
                                            </div>
                                            <div class="col-2" style="padding-top: 5px;">
                                                <a href="/questions/<%= questions[i].id %>">
                                                    <button class="btn-answer">
                                                    Jawab
                                                </button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- <ul class="tag-kategori">
                                    <li class="kategori">
                                        
                                    </li>
                                    <li class="kategori">
                                        
                                    </li>
                                    <li class="kategori">
                                        
                                    </li>
                                </ul> -->
                                    <!-- Tombol Jawab -->

                                    <div class="konten-time" style="margin-top: 15px;">
                                        <%= moment(questions[i].createdAt).fromNow() %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <!-- </div> -->
                </div>

                <!-- iklan -->
                <div class="col-4" id="iklan" style="position: initial;">
                    <div>
                        <img src="views/assets/images/iklan-1 BUAT AKUN SEKARANG 1.svg" alt="">
                    </div><br>
                    <div>
                        <img src="views/assets/images/iklan-2 BUAT AKUN SEKARANG (1) 1.svg" alt="">
                    </div>
                </div>
            </div>
        </div>

        <!-- page number -->
        <div class="container">
            <div class="row">
                <div class="col-8"></div>
                <div class="col-4">
                    <div id="pageNumber">
                    </div>
                </div>
            </div>
        </div>


    </div>

    <!--  Footer -->
    <div class="container-footer">
        <h6 style="color: white;">©2020 PT Betewe Apa ya. All Rights Reserved</h6>
        <h6 style="margin-top: 8px; color: white;">Privacy — Terms</h6>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous">
    </script>
</body>

</html>